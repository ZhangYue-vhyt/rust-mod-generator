{
    "name": "rust-mod-generator",
    "displayName": "Rust Mod Generator",
    "description": "Create a mod quickly.",
    "author": "Zhang Yue",
    "publisher": "ZhangYue",
    "license": "See LICENSE IN LICENSE.txt",
    "repository": "https://github.com/ZhangYue-vhyt/rust-mod-generator",
    "icon": "images/logo256.png",
    "version": "0.0.3",
    "engines": {
        "vscode": "^1.46.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onCommand:rust-mod-generator.showModuleNameDialog"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "title": "Rust Mod Generator",
            "properties": {
                "rust-mod-generator.autoFocus": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable to auto focusing on the new created module."
                },
                "rust-mod-generator.selectAccessModifier": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable to set the access modifier when creating a new module."
                },
                "rust-mod-generator.addModDeclaration": {
                    "type": "boolean",
                    "default": true,

                    "description": "Enable to auto add '<modifier> mod <mod_name>;' to the head of the resource file."
                }
            }
        },
        "commands": [
            {
                "command": "rust-mod-generator.showModuleNameDialog",
                "title": "New a Rust module."
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "when": "resourceLangId == rust",
                    "group": "navigation",
                    "command": "rust-mod-generator.showModuleNameDialog"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "yarn run compile",
        "compile": "tsc -p ./",
        "lint": "eslint src --ext ts",
        "watch": "tsc -watch -p ./",
        "pretest": "yarn run compile && yarn run lint",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/mocha": "^7.0.2",
        "@types/node": "^14.4.0",
        "@types/vscode": "^1.46.0",
        "@typescript-eslint/eslint-plugin": "^2.30.0",
        "@typescript-eslint/parser": "^2.30.0",
        "eslint": "^6.8.0",
        "glob": "^7.1.6",
        "mocha": "^7.1.2",
        "typescript": "^3.8.3",
        "vscode-test": "^1.3.0"
    },
    "dependencies": {}
}
